{
  "includes": ["src"],
  "compilerOptions": {
    // paths
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    // build
    "target": "ESNext",
    "module": "CommonJS",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    // type check
    "lib": ["ESNext", "DOM"],
    "strict": true
  }
}
